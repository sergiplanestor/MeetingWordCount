<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Text">
        <item name="android:textColor">@color/black</item>
    </style>
    
    <style name="Text.Body">
        <item name="fontFamily">@font/opensans_regular</item>
        <item name="android:textSize">@dimen/text_body</item>
    </style>

    <style name="Text.Hint">
        <item name="fontFamily">@font/opensans_regular</item>
        <item name="android:textSize">@dimen/text_hint</item>
        <item name="android:textColor">@color/dove_gray</item>
    </style>
    
    <style name="Text.Header">
        <item name="fontFamily">@font/nunito_regular</item>
        <item name="android:textSize">@dimen/text_header</item>
    </style>

    <style name="Button" parent="Widget.MaterialComponents.Button.OutlinedButton">

    </style>

    <style name="InputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense" />

    <!-- Bottom sheet bkg -->
    <style name="BottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/ModalStyle</item>
    </style>

    <style name="ModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/shape_bottom_sheet_background</item>
    </style>

</resources>